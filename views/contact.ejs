<%- include("header") -%>

<div class="container-fluid contact" id="contact-section">
    <div class="row">
      <div class="col-lg-12">
        <div class="box" id="heading">
          <h1> Contact Me </h1>
        </div>
        <form class="contactForm" id="Form">
            <div class="form-group">
                <!-- <label for="name">Name:</label> -->
                <input type="text" class="form-control" id="name" placeholder="Enter name" required>
            </div>

             <div class="form-group">
                <!-- <label for="surname">Surname:</label> -->
                <input type="text" class="form-control" id="surname" placeholder="Enter surname" required>
            </div>

            <div class="form-group">
                <!-- <label for="email">Email address:</label> -->
                <input type="email" class="form-control" id="email" placeholder="Enter email" required>
            </div>

            <div class="form-group">
                <!-- <label for="comment">Comment:</label> -->
                <textarea class="form-control" id="comment" rows="5" placeholder="Enter comment" required></textarea>
            </div>
            <button type="submit" class="btn btn-outline-light" onClick="submit()">Submit</button>
        </form>
      </div>
    </div>
  </div>

<%- include("footer") -%>
